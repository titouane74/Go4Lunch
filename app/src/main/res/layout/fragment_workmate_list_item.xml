<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_workmates"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wk_list_item_size_height"
    android:layout_marginTop="@dimen/default_margin"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/item_list_workmate_img"
        android:layout_width="@dimen/wk_list_img_size_workmate_width_height"
        android:layout_height="@dimen/wk_list_img_size_workmate_width_height"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/ic_profile_user_png"
        android:contentDescription="@string/img_user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/wk_list_linear_layout_size_height_workmate"
        android:layout_alignTop="@+id/item_list_workmate_img"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/wk_list_linear_layout_margin_start"
        android:layout_marginTop="@dimen/wk_list_linear_layout_margin_top"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_toEndOf="@+id/item_list_workmate_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_list_workmate_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wk_list_img_size_workmate_width_height"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/wk_list_text_size_workmate" />

        <View
            android:id="@+id/divider_workmate_item"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wk_list_item_divider_height_size"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@color/colorDivider" />
    </LinearLayout>
</RelativeLayout>