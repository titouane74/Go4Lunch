<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.LunchFragment"
    android:theme="@style/Go4LunchTheme">

    <LinearLayout
        android:id="@+id/lunch_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/img_size_cutlery"
            android:layout_height="@dimen/img_size_cutlery"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/logo_go4lunch"
            android:layout_marginStart="@dimen/margin_horizontal_border" />

        <TextView
            android:id="@+id/text_lunch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/default_large_margin"
            android:layout_marginEnd="@dimen/margin_horizontal_border"
            android:text="@string/text_lunch_title"
            android:textAllCaps="true"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="34dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/lunch_info"
        app:layout_constraintTop_toBottomOf="@+id/lunch_info" />

</androidx.constraintlayout.widget.ConstraintLayout>