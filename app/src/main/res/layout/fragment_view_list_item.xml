<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginEnd="@dimen/default_margin"
    android:layout_marginTop="@dimen/margin_vertical_item"
    android:layout_marginBottom="@dimen/margin_vertical_item"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/text_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Le Zinc"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/colorTextBlack"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_end_item_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_restaurant"
        android:text="120m"
        android:textSize="@dimen/text_size_item_title"
        android:textColor="@color/colorTextDistance"
        />

    <TextView
        android:id="@+id/text_restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/text_restaurant_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="French - 12 rue du Faubourg PoissonniÃ¨re"
        android:textSize="@dimen/text_size_item_description"
        android:textColor="@color/colorTextRestaurantInformation"
        />

    <ImageView
        android:id="@+id/img_workmate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_workmate"
        app:layout_constraintTop_toBottomOf="@id/text_restaurant_name"
        app:layout_constraintEnd_toStartOf="@id/text_choosed_by_workmates"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_choosed_by_workmates"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_end_item_description"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/text_restaurant_name"
        app:layout_constraintEnd_toStartOf="@id/img_restaurant"
        app:layout_constraintBottom_toBottomOf="@id/img_workmate"
        android:text="(2)"
        android:textSize="@dimen/default_text_size_mini"
        android:textColor="@color/colorTextRestaurantInformation"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/text_opening_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/text_restaurant_address"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Open until 2.30pm"
        android:textSize="@dimen/text_size_item_description"
        android:textColor="@color/colorTextRestaurantInformation"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/text_note"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_end_item_description"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/text_restaurant_address"
        app:layout_constraintEnd_toStartOf="@id/img_restaurant"
        android:text="note stars"
        android:textSize="@dimen/default_text_size_mini"
        android:textColor="@color/colorTextRestaurantInformation"
        />
    <ImageView
        android:id="@+id/img_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_restaurant_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>