<resources>
    <!-- Base application theme. -->
    <style name="Go4LunchTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Go4LunchTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Go4LunchTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <style name="Go4LunchTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="StartTheme" parent="Go4LunchTheme">
        <item name="android:windowBackground">@drawable/start_background</item>
    </style>


    <style name="LoginTheme" parent="Go4LunchTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@drawable/lunch_portrait</item>
    </style>

    <style name="LoginTheme.Button" parent="LoginTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/auth_btn_radius</item>
        <item name="android:paddingStart">@dimen/auth_btn_text_align_padding</item>
        <item name="android:text">@string/sign_in_with_email</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="LoginTheme.NoActionBar" parent="Go4LunchTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>