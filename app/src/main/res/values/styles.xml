<resources>
    <!-- Base application theme. -->
    <style name="Go4LunchTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Go4LunchTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Go4LunchTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="StartTheme" parent="Go4LunchTheme">
        <item name="android:windowBackground">@drawable/start_background</item>
    </style>

    <style name="AuthenticationTheme" parent="Go4LunchTheme">
        <item name="colorPrimary">@color/colorTextPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextPrimary</item>
        <item name="android:windowBackground">@drawable/lunch_portrait</item>
    </style>

    <style name="AuthenticationTheme.Button" parent="AuthenticationTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/auth_btn_radius</item>
        <item name="android:paddingStart">@dimen/auth_btn_text_align_padding</item>
        <item name="android:textSize">@dimen/auth_btn_text_size</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="SettingsTheme.Button" parent="SettingsTheme">
        <item name="android:textSize">@dimen/settings_btn_text_size</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:background">@drawable/btn_radius_primary_color</item>
        <item name="android:layout_margin">@dimen/default_margin_mini</item>
        <item name="android:layout_marginStart">@dimen/settings_btn_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/settings_btn_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:paddingStart">@dimen/default_margin</item>
        <item name="android:paddingEnd">@dimen/default_margin</item>
    </style>

    <style name="RestaurantDetailTheme" parent="Go4LunchTheme"/>

    <style name="RestaurantDetailTheme.TextUnderIcon" parent="RestaurantDetailTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">@dimen/resto_det_vertical_margin</item>
        <item name="android:textSize">@dimen/resto_det_text_size_under_icon</item>
    </style>

    <style name="RestaurantDetailTheme.IconAction" parent="RestaurantDetailTheme">
        <item name="android:layout_width">@dimen/resto_det_img_size_icon</item>
        <item name="android:layout_height">@dimen/resto_det_img_size_icon</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="RestaurantDetailTheme.IconStar" parent="RestaurantDetailTheme">
        <item name="android:layout_marginStart">@dimen/default_margin_mini</item>
        <item name="android:layout_width">@dimen/resto_list_det_img_star_size</item>
        <item name="android:layout_height">@dimen/resto_list_det_img_star_size</item>
    </style>

    <style name="RestaurantListTheme.IconStar" parent="RestaurantDetailTheme">
        <item name="android:layout_marginEnd">@dimen/resto_list_margin_end_item_description</item>
        <item name="android:layout_width">@dimen/resto_list_det_img_star_size</item>
        <item name="android:layout_height">@dimen/resto_list_det_img_star_size</item>
    </style>

</resources>